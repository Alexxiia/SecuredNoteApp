<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.noteapp.ui.main.MainViewModel" />
        <variable
            name="dataViewModel"
            type="com.example.noteapp.ui.data.DataViewModel" />
        <variable
            name="noteFragmentClass"
            type="com.example.noteapp.ui.main.NoteFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".ui.main.MainFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:hint="title"
            app:boxBackgroundColor="#C8AEAE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={dataViewModel.title}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:hint="note"
            app:boxBackgroundColor="#C8AEAE"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:layout_editor_absoluteX="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={dataViewModel.content}" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/save_bt_fingerprint"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save by fingerprint"
            android:backgroundTint="#9F778C"
            android:onClick="@{() -> noteFragmentClass.saveByFingerprint()}"
            android:textColor="#453E3E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note" />

        <Button
            android:id="@+id/save_bt_password"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save by password"
            android:backgroundTint="#9F778C"
            android:onClick="@{() -> noteFragmentClass.saveByPassword()}"
            android:textColor="#453E3E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/save_bt_fingerprint" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>